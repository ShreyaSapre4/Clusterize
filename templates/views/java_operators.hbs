                public class MyClass {
                    public static void main(String[] args) {
                 // Arithmetic Operators
                        int num1 = 10;
                        int num2 = 5;
                
                        System.out.println("Arithmetic Operators:");
                        System.out.println("Addition (+): " + (num1+num2));
                        System.out.println("Subtraction (-): " + (num1-num2));
                        System.out.println("Multiplication (*): " + (num1*num2));
                        System.out.println("Division (/): " + (num1/num2));
                        System.out.println("Modulus (%): " + (num1%num2));
                
                        // Assignment Operators
                        int value = 2;
                        System.out.println("\n+=: " + (value += 9));
                        System.out.println("-=: " + (value -= 5));
                        System.out.println("*=: " + (value *= 2));
                        System.out.println("/=: " + (value /= 3));
                        System.out.println("%=: " + (value %= 5));
                
                        // Logical Operators
                        boolean isTrue = true;
                        boolean isFalse = false;
                        System.out.println("\nLogical Operators:");
                        System.out.println("&& (AND): " + (isTrue && isFalse));
                        System.out.println("|| (OR): " + (isTrue || isFalse));
                        System.out.println("!(NOT): " +(!isTrue));
                
                        // Relational Operators
                        int x = 5;
                        int y = 8;
                        System.out.println("\nRelational Operators:");
                        System.out.println("== (Equal to): " + (x == y));
                        System.out.println("!= (Not equal to): " + (x != y));
                        System.out.println("< (Less than): " + (x < y));
                        System.out.println("> (Greater than): " + (x > y));
                        System.out.println("<= (Less than or equal to): " + (x <= y));
                        System.out.println(">= (Greater than or equal to): " +  (x >= y));
                
                        // Bitwise Operators
                        int m = 5; // binary: 0101
                        int n = 3; // binary: 0011
                
                        System.out.println("\nBitwise Operators:");
                        System.out.println("& (AND): " + ( m & n));
                        System.out.println("| (OR): " + (m | n));
                        System.out.println("^ (XOR): " + (m^n));
                        System.out.println("~ (NOT): " +( ~m));
                        System.out.println(">> (Right Shift): " + (m >> 1));
                        System.out.println("<< (Left Shift): " +( m << 1));
                
                        // Increment/Decrement Operators
                        int count = 10;
                        count++;
                        int anotherCount = 7;
                        anotherCount--;
                
                        System.out.println("\nIncrement/Decrement Operators:");
                        System.out.println("count++ (Increment): " + count);
                        System.out.println("anotherCount-- (Decrement): " + anotherCount);
                
                        // Ternary Conditional Operator
                        int p = 10;
                        int q = 5;
                        int max = (p > q) ? p : q;
                
                        System.out.println("\nTernary Conditional Operator:");
                        System.out.println("Max value: " + max);
                    }
                }
