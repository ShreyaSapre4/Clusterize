                        System.out.println("!(NOT): " +(!isTrue));
                
                        // Relational Operators
                        int x = 5;
                        int y = 8;
                        System.out.println("\nRelational Operators:");
                        System.out.println("== (Equal to): " + (x == y));
                        System.out.println("!= (Not equal to): " + (x != y));
                        System.out.println("< (Less than): " + (x < y));
                        System.out.println("> (Greater than): " + (x > y));
                        System.out.println("<= (Less than or equal to): " + (x <= y));
                        System.out.println(">= (Greater than or equal to): " +  (x >= y));
                
                        // Bitwise Operators
                        int m = 5; // binary: 0101
                        int n = 3; // binary: 0011
                
                        System.out.println("\nBitwise Operators:");
                        System.out.println("& (AND): " + ( m & n));
                        System.out.println("| (OR): " + (m | n));
                        System.out.println("^ (XOR): " + (m^n));
                        System.out.println("~ (NOT): " +( ~m));
                        System.out.println(">> (Right Shift): " + (m >> 1));
                        System.out.println("<< (Left Shift): " +( m << 1));
                
                        // Increment/Decrement Operators
                        int count = 10;
                        count++;
                        int anotherCount = 7;
                        anotherCount--;
                
                        System.out.println("\nIncrement/Decrement Operators:");
                        System.out.println("count++ (Increment): " + count);
                        System.out.println("anotherCount-- (Decrement): " + anotherCount);
                
                        // Ternary Conditional Operator
                        int p = 10;
                        int q = 5;
                        int max = (p > q) ? p : q;
                
                        System.out.println("\nTernary Conditional Operator:");
                        System.out.println("Max value: " + max);
                    }
