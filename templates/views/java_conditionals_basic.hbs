                            public class MyClass {
                                public static void main(String[] args) {
                                    int number = 42;
                            
                                    // if statement
                                    if (number > 0) {
                                        System.out.println("1. Number is positive.");
                                    }
                            
                                    // if-else statement
                                    if (number % 2 == 0) {
                                        System.out.println("2. Number is even.");
                                    } else {
                                        System.out.println("2. Number is odd.");
                                    }
                            
                                    // if-else if-else statement
                                    if (number < 0) {
                                        System.out.println("3. Number is negative.");
                                    } else if (number == 0) {
                                        System.out.println("3. Number is zero.");
                                    } else {
                                        System.out.println("3. Number is positive.");
                                    }
                            
                                    // switch statement
                                    char grade = 'B';
                                    switch (grade) {
                                        case 'A':
                                            System.out.println("4. Excellent!");
                                            break;
                                        case 'B':
                                            System.out.println("4. Good.");
                                            break;
                                        case 'C':
                                            System.out.println("4. Fair.");
                                            break;
                                        case 'D':
                                            System.out.println("4. Needs improvement.");
                                            break;
                                        default:
                                            System.out.println("4. Invalid grade.");
                                    }
                                }
                            }
                            
